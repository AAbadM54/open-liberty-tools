<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <!-- SERVLET DEFINITIONS -->
  <servlet id="Default">
    <servlet-name>NonPersistent Timer Sample Servlet</servlet-name>
    <display-name>NonPersistent Timer Sample Servlet</display-name>
    <servlet-class>wasdev.sample.nonpersistenttimer.TimerServlet</servlet-class>
    <load-on-startup></load-on-startup>
  </servlet>

  <!-- SERVLET MAPPINGS -->        
  <servlet-mapping id="ServletMapping_Default">
    <servlet-name>NonPersistent Timer Sample Servlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>
