                  httpPort="9080"
                  httpsPort="9443" />
    
    <dataSource id="ds1">
        <properties.derby.embedded id="props1" databaseName="DB"/>
    </dataSource>
    
    <dataSource id="ds2">
        <properties.derby.embedded id="props1" databaseName="DB2"/>
    </dataSource>
    
